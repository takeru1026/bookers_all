<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li style="color:red"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag attachment_url(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"), size:'100x100' %>
    　<table style="margin-top:-25px">
    　   <tbody>
    　     <tr></tr>
    　     <tr style="border-top: 1px solid #dee2e6">
    　       <th  style="padding:10px">name</th>
    　       <th  style="padding:10px"><%= @user.name %></th>
    　     </tr>
    　     <tr  style="border-top: 1px solid #dee2e6;padding:10px">
    　       <th  style="padding:10px">introduction</th>
    　       <th  style="padding:10px"><%= @user.introduction %></th>
    　     </tr>
    　    <tr>
    　      <th><%= "フォロー数: #{@user.follower.count}" %></th>
           <th><%= "フォロワー数: #{@user.followed.count}" %></th>
    　    </tr>
    　   </tbody>
    　</table>
    　<div class="row">
    　   <a class="btn btn-outline-secondary btn-bloc fas fa-user-cog" href="/users/<%= current_user.id %>/edit", style="width:100%"></a>
    　</div>
      <%= render 'books/form' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr style="box-sizing: border-box;">
            <th style="width:10%; padding:12px"></th>
            <th style="width:25%; padding:12px">Title</th>
            <th style="width:40%; padding:12px">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr style="box-sizing: border-box;">
              <td style="vertical-align:  middle;border-top: 1px solid #dee2e6;">
                <a href="/users/<%= book.user.id %>">
                  <%= image_tag attachment_url(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"), size:'50x50' %>
                </a>
              </td>
              <td style="padding: 0.75rem;vertical-align: middle;border-top: 1px solid #dee2e6;"><%= link_to book.title, book_path(book) %></td>
              <td style="padding: 0.75rem;vertical-align:  middle;border-top: 1px solid #dee2e6;"><%= book.body %></td>
              <td><%= link_to "#{book.comments.count}コメント", book_path(book)%></td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(book), method: :delete do %>
                    ♥<%= book.favorites.count %> いいね
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(book), method: :post do %>
                    ♡<%= book.favorites.count %> いいね
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= render 'relationships/follow', user: book.user %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
