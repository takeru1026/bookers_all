<p>コメント件数：<%= book.comments.count %></p>
<% book.comments.each do |comment| %>
  <div>
    <%= image_tag attachment_url(comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"), size:'50x50' %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user_id == current_user.id %>
      <%= link_to "Destroy", book_comment_path(book,comment), method: :delete, data:{confirm: "削除しますか？"}, class: "btn-sm btn-danger", remote: true %>
    <% end %>
  </div>
<% end %>
